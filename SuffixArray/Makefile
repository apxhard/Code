CCC        = g++
CCFLAGS    = -Wall
CCINCLUDES = 

RM         = rm -f


# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~


SOURCES = suffix.cc
OBJECTS = $(SOURCES:.cc=.o)


# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~


suf : $(OBJECTS)
	$(CCC) -o $@ $(CCFLAGS) $(OBJECTS)


# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~


clean :
	$(RM) *.o Makefile.bak core

